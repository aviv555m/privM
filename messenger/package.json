{
  "name": "messenger-monorepo",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile start",
    "dev:desktop": "pnpm --filter desktop tauri dev",
    "build:web": "pnpm --filter web build",
    "build:mobile": "pnpm --filter mobile export",
    "build:desktop": "pnpm --filter desktop tauri build",
    "lint": "pnpm check:conflicts && pnpm -r lint",
    "typecheck": "pnpm check:conflicts && pnpm -r typecheck",
    "postinstall": "node scripts/generate-assets.mjs",
    "check:conflicts": "bash scripts/check-conflict-markers.sh"
  },
  "devDependencies": {
    "typescript": "^5.6.3"
  }
}
