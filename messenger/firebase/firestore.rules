rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isParticipant(chatId) {
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }

    function hasValidParticipants(data) {
      return data.participants is list
        && data.participants.size() == 2
        && data.participants[0] is string
        && data.participants[1] is string
        && data.participants[0] != data.participants[1];
    }

    function hasValidLastMessageFields(data, participants) {
      return data.lastMessage is string
        && data.lastMessage.size() <= 1000
        && (
          (data.lastSenderId == '' && data.lastMessage == '')
          || data.lastSenderId in participants
        );
    }

    function hasValidUnreadCountMapShape(data, participants) {
      return data.unreadCountMap is map
        && data.unreadCountMap.keys().hasAll(participants)
        && data.unreadCountMap.keys().hasOnly(participants)
        && data.unreadCountMap[participants[0]] is int
        && data.unreadCountMap[participants[1]] is int
        && data.unreadCountMap[participants[0]] >= 0
        && data.unreadCountMap[participants[1]] >= 0;
    }

    function isValidUnreadCountUpdate() {
      let uid = request.auth.uid;
      let participants = resource.data.participants;
      let peerUid = participants[0] == uid ? participants[1] : participants[0];

      return (
        request.resource.data.lastSenderId == uid
        && request.resource.data.unreadCountMap[uid] == 0
        && request.resource.data.unreadCountMap[peerUid] == resource.data.unreadCountMap[peerUid] + 1
      ) || (
        request.resource.data.lastSenderId == resource.data.lastSenderId
        && request.resource.data.lastMessage == resource.data.lastMessage
        && request.resource.data.unreadCountMap[uid] == 0
        && request.resource.data.unreadCountMap[peerUid] == resource.data.unreadCountMap[peerUid]
      );
    }

    match /users/{uid} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == uid
                    && request.resource.data.uid == uid
                    && request.resource.data.email is string
                    && request.resource.data.displayName is string;
      allow update: if isSignedIn() && request.auth.uid == uid
                    && request.resource.data.uid == uid
                    && request.resource.data.email == resource.data.email;
      allow delete: if false;
    }

    match /chats/{chatId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn()
                    && hasValidParticipants(request.resource.data)
                    && request.auth.uid in request.resource.data.participants
                    && hasValidLastMessageFields(request.resource.data, request.resource.data.participants)
                    && hasValidUnreadCountMapShape(request.resource.data, request.resource.data.participants)
                    && request.resource.data.unreadCountMap[request.resource.data.participants[0]] == 0
                    && request.resource.data.unreadCountMap[request.resource.data.participants[1]] == 0;
      allow update: if isSignedIn()
                    && request.auth.uid in resource.data.participants
                    && request.resource.data.participants == resource.data.participants
                    && hasValidLastMessageFields(request.resource.data, resource.data.participants)
                    && hasValidUnreadCountMapShape(request.resource.data, resource.data.participants)
                    && isValidUnreadCountUpdate();
      allow delete: if false;

      match /messages/{messageId} {
        allow read: if isParticipant(chatId);
        allow create: if isParticipant(chatId)
                      && request.resource.data.chatId == chatId
                      && request.resource.data.senderId == request.auth.uid
                      && request.resource.data.text is string
                      && request.resource.data.text.size() > 0
                      && request.resource.data.text.size() <= 1000;
        allow update, delete: if false;
      }
    }
  }
}
